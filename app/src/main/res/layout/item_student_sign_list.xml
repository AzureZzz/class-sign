<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlv_class_check_in_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:background="@color/white"
    android:paddingRight="16dp">


    <TextView
        android:id="@+id/tv_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="2019/01/09 08:29"
        android:textColor="#000000"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_sign_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_task_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:text="2019/01/09 08:29"
        android:textColor="#000000"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_check_in_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_task_name"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/tv_sign_time"
        android:layout_marginLeft="8dp"
        android:text="数字考勤"
        android:textColor="#000000"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_check_in_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:text="出勤"
        android:textColor="#00FF00"
        android:textSize="13sp" />

    <com.xuexiang.xui.widget.button.roundbutton.RoundButton
        android:id="@+id/rb_sign_code"
        style="@style/RoundButton.Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:text="考勤"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <com.xuexiang.xui.widget.button.roundbutton.RoundButton
        android:id="@+id/rb_sign_scan"
        style="@style/RoundButton.Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:text="考勤"
        android:textColor="@color/white"
        android:textSize="13sp" />


</RelativeLayout>
